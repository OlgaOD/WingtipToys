@model IList<WingtipToys.Dtos.ProductDto>
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Products</h1>
            </hgroup>
            <section class="featured">
                <div style="margin-left: 2em">
                    <table>
                        <tr>
                            <td style="vertical-align: top; width: 30%;">
                                <hgroup class="title">
                                    <h1>Wingtip Toys</h1>
                                    <h2>Wingtip Toys can help you find the perfect gift</h2>
                                </hgroup>
                                <p>
                                    We're all about transportation toys. You can order
                                    any of our toys today. Each toy listing has detailed
                                    information to help you choose the right toy.
                                </p>
                            </td>
                            <td>
                                @if (Model.Count > 0) {
                                    <table>
                                        @foreach (var product in Model) {
                                            <tr>
                                                <td>
                                                    <img border="1" height="75" src="Assets/@product.ImagePath" width="100">
                                                </td>
                                                <td>
                                                    <input type="hidden" id="productId" name="productId" value="@product.ProductId">
                                                    @product.ProductName
                                                    <br>
                                                    <span class="ProductPrice">
                                                        <strong>Price:</strong>
                                                        @product.UnitPrice
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </section>
        </div>
    </section>
    <section class="content-wrapper main-content clear-fix"></section>
</div>